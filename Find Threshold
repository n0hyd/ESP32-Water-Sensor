#include <Arduino.h>

const int touchPin = T0; // GPIO pin with capacitive touch capability (change to your specific pin)
int touchValue = 0;

void setup() {
  Serial.begin(115200);
  delay(1000); // Give some time for the Serial Monitor to start
  Serial.println("Touch Threshold Calibration");
}

void loop() {
  touchValue = touchRead(touchPin); // Read capacitive touch sensor value
  Serial.print("Touch Value: ");
  Serial.println(touchValue);

  delay(500); // Wait for 500ms before the next reading
}
